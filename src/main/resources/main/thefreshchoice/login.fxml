<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.thefreshchoice.LoginController">
   <children>
      <ImageView fx:id="background" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Pict/Backgrounds/login-background.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="btnExit" fitHeight="104.0" fitWidth="64.0" layoutX="1849.0" layoutY="6.0" onMouseClicked="#onClickExit" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Pict/Icons/exit-icon.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <TextField fx:id="txtUsername" focusTraversable="false" layoutX="1187.0" layoutY="428.0" prefHeight="43.0" prefWidth="367.0" promptText="Username" style="-fx-border-radius: 10; -fx-background-radius: 10;">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPassword" focusTraversable="false" layoutX="1187.0" layoutY="524.0" prefHeight="45.0" prefWidth="322.0" promptText="Password" style="-fx-background-radius: 10; -fx-border-radius: 10;">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnLogin" layoutX="1261.0" layoutY="621.0" mnemonicParsing="false" onAction="#onClickLogin" prefHeight="46.0" prefWidth="219.0" style="-fx-background-color: #A0C878; -fx-background-radius: 18; -fx-border-radius: 18;" text="LOGIN" textAlignment="CENTER" textFill="#537d5d">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="txtPasswordVisible" focusTraversable="false" layoutX="1187.0" layoutY="524.0" prefHeight="45.0" prefWidth="322.0" promptText="Password" style="-fx-border-radius: 10; -fx-background-radius: 10;">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font>
      </TextField>
      <Button fx:id="btnTogglePassword1" layoutX="1513.0" layoutY="528.0" mnemonicParsing="false" onAction="#onTogglePassword" prefHeight="30.0" prefWidth="42.0" style="-fx-background-color: #FFFDF6;">
         <graphic>
            <ImageView fx:id="iconEye" fitHeight="30.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Pict/Icons/eye-open.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
